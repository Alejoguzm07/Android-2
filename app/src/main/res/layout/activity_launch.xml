<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="2725dp"
        android:layout_height="814dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="1675dp"
        android:layout_marginRight="1675dp"
        android:text="Task Planner App"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="1956dp"
        android:layout_height="701dp"
        android:layout_marginTop="602dp"
        android:layout_marginEnd="2089dp"
        android:layout_marginRight="2089dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="1960dp"
        android:layout_height="516dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="2098dp"
        android:layout_marginRight="2098dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/button"
        android:layout_width="1520dp"
        android:layout_height="329dp"
        android:layout_marginStart="2242dp"
        android:layout_marginLeft="2242dp"
        android:layout_marginBottom="705dp"
        android:text="@string/login_failed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>